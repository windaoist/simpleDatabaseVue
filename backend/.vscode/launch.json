{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run", "--no-debugger", "--no-reload"],
      "env": {
        "FLASK_APP": "run.py",
        "FLASK_DEBUG": "1"
      }
    }
  ]
